.four.columns
  = link_to "New Event", new_event_path, class: "button" if current_user
  = link_to "Back", events_path, class: "button"

.four.columns

.four.columns
  = render 'shared/search'

.twelve.columns
  %table.table.table-bordered.table-striped
    %tr
      %th Dealer Name
      %th Name
      %th Address
      %th DOB
      %th SSN

    - @events.each do |event| 
      %tr
        %td= event.user.name
        %td= link_to event.name, event_path(event)
        %td= event.address
        %td= event.dob.strftime("%m/%d/%Y")
        %td= event.ssn.last(4)






